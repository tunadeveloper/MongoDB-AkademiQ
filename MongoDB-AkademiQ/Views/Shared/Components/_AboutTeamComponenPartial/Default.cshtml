@using MongoDB_AkademiQ.DTOs.TeamDTOs
@model List<ResultTeamDTO>
<section class="py-20 px-6 md:px-20">
    <div class="max-w-7xl mx-auto text-center mb-16">
        <h2 class="text-3xl font-bold text-[#0d161c] dark:text-white mb-4">Profesyonellerle Tanışın</h2>
        <p class="text-slate-600 dark:text-slate-400 max-w-2xl mx-auto">Markayı her gün tasarlayan, test eden ve onunla yaşayan ekip.</p>
    </div>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 max-w-7xl mx-auto">
        @foreach(var item in Model)
        {
            <div class="flex flex-col items-center gap-4 group">
                <div class="h-40 w-40 rounded-full overflow-hidden border-4 border-slate-100 dark:border-slate-800 shadow-lg relative">
                    <div class="absolute inset-0 bg-primary/20 opacity-0 group-hover:opacity-100 transition-opacity z-10"></div>
                    <img alt="@item.NameSurname Portresi" class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-110" src="@item.ImageUrl" />
                </div>
                <div class="text-center">
                    <h4 class="text-lg font-bold text-[#0d161c] dark:text-white">@item.NameSurname</h4>
                    <p class="text-primary text-sm font-medium">@item.PositionName</p>
                </div>
            </div>
        }
    </div>
</section>