@using MongoDB_AkademiQ.DTOs.ContactInfoDTOs
@model ResultContactInfoDTO

<div class="lg:col-span-5 flex flex-col gap-6">
    <div>
        <h2 class="text-slate-900 dark:text-white text-2xl font-bold leading-tight tracking-tight mb-2">Diğer İletişim Yolları</h2>
        <p class="text-slate-500 dark:text-slate-400 text-sm">Biriyle doğrudan konuşmayı mı tercih edersiniz? Bize ulaşın.</p>
    </div>
    <div class="flex flex-col gap-4">
        <div class="flex gap-4 rounded-xl border border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-800 p-5 shadow-sm items-start transition-all hover:border-primary/50">
            <div class="text-primary bg-primary/10 p-2.5 rounded-full shrink-0">
                <span class="material-symbols-outlined text-[24px]">location_on</span>
            </div>
            <div class="flex flex-col gap-1">
                <h3 class="text-slate-900 dark:text-white text-base font-bold">Bizi Ziyaret Edin</h3>
                <p class="text-slate-500 dark:text-slate-400 text-sm leading-relaxed">
                    @Model.Address
                </p>
            </div>
        </div>
        <div class="flex gap-4 rounded-xl border border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-800 p-5 shadow-sm items-start transition-all hover:border-primary/50">
            <div class="text-primary bg-primary/10 p-2.5 rounded-full shrink-0">
                <span class="material-symbols-outlined text-[24px]">call</span>
            </div>
            <div class="flex flex-col gap-1">
                <h3 class="text-slate-900 dark:text-white text-base font-bold">Telefon Desteği</h3>
                <p class="text-slate-500 dark:text-slate-400 text-sm">Pzt-Cum, 08:00 - 18:00 MST</p>
                <a class="text-primary text-sm font-semibold hover:underline" href="tel:@Model.PhoneNumber">@Model.PhoneNumber</a>
            </div>
        </div>
        <div class="flex gap-4 rounded-xl border border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-800 p-5 shadow-sm items-start transition-all hover:border-primary/50">
            <div class="text-primary bg-primary/10 p-2.5 rounded-full shrink-0">
                <span class="material-symbols-outlined text-[24px]">mail</span>
            </div>
            <div class="flex flex-col gap-1">
                <h3 class="text-slate-900 dark:text-white text-base font-bold">E-posta Gönderin</h3>
                <p class="text-slate-500 dark:text-slate-400 text-sm">En kısa sürede yanıt vereceğiz.</p>
                <a class="text-primary text-sm font-semibold hover:underline" href="mailto:@Model.Email">@Model.Email</a>
            </div>
        </div>
    </div>
</div>