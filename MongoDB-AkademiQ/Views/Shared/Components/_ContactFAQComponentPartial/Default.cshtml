@using MongoDB_AkademiQ.DTOs.FAQDTOs
@model List<ResultFAQDTO>
<div class="bg-white dark:bg-slate-800/30 border-t border-slate-200 dark:border-slate-800 py-16">
    <div class="px-4 md:px-10 lg:px-40 flex justify-center">
        <div class="w-full max-w-[900px] flex flex-col gap-10">
            <div class="text-center">
                <h2 class="text-slate-900 dark:text-white text-3xl font-bold tracking-tight mb-3">Sıkça Sorulan Sorular</h2>
                <p class="text-slate-500 dark:text-slate-400">Aradığınız cevabın burada olup olmadığını kontrol ederek zaman kazanabilirsiniz.</p>
            </div>
            <div class="grid gap-4">
                @foreach(var item in Model)
                {
                    <details class="group bg-slate-50 dark:bg-slate-800 border border-slate-200 dark:border-slate-700 rounded-lg p-4 cursor-pointer">
                        <summary class="flex items-center justify-between font-bold text-slate-900 dark:text-white list-none">
                            <span>@item.Question</span>
                            <span class="transition group-open:rotate-180">
                                <span class="material-symbols-outlined">expand_more</span>
                            </span>
                        </summary>
                        <p class="text-slate-600 dark:text-slate-400 mt-3 text-sm leading-relaxed">
                           @item.Answer
                        </p>
                    </details>
                }
            </div>
        </div>
    </div>
</div>