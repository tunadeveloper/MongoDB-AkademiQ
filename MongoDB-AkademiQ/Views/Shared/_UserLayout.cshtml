@{
    Layout = null;
}

<!DOCTYPE html>
<html class="light" lang="en">
@await Component.InvokeAsync("_LayoutHeadComponentPartial")
<body class="bg-background-light dark:bg-background-dark text-text-main dark:text-white antialiased min-h-screen flex flex-col">
    @await Component.InvokeAsync("_LayoutHeaderComponentPartial")
    @RenderBody()
    @await Component.InvokeAsync("_LayoutFooterComponentPartial")
</body>
</html>

@if (TempData["NewsletterSuccess"] != null || TempData["NewsletterError"] != null)
{
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            @if (TempData["NewsletterSuccess"] != null)
            {
                    <text>
                    Swal.fire({
                        icon: 'success',
                        title: 'Başarılı!',
                        text: '@Html.Raw(TempData["NewsletterSuccess"])',
                        confirmButtonColor: '#0d93f2',
                        timer: 3000,
                        timerProgressBar: true
                    });
                    </text>
            }
            @if (TempData["NewsletterError"] != null)
            {
                    <text>
                    Swal.fire({
                        icon: 'error',
                        title: 'Hata!',
                        text: '@Html.Raw(TempData["NewsletterError"])',
                        confirmButtonColor: '#dc2626'
                    });
                    </text>
            }
        });
    </script>
}