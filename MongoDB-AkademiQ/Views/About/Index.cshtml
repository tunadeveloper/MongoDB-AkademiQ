@using MongoDB_AkademiQ.Entities
@model About
@{
    ViewData["Title"] = "Hakkımızda";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<main class="flex-1">
    <section class="relative h-[80vh] min-h-[600px] w-full overflow-hidden">
        <div class="absolute inset-0 bg-cover bg-center bg-no-repeat" data-alt="Açık mavi gökyüzü altında karla kaplı dağ zirveleri" style='background-image: url("https://lh3.googleusercontent.com/aida-public/AB6AXuBk9CwcYunTSzn7gNGUrAq-cJRtLgCTieOuBQB1upvkhO-JrhbggQxVU_NV1tAjY2C8ieOZhn90jcR3GJCTu7yERIXmHPWswyLIjaKYmbS5aBesTSx2Rs22Lf3UCKOiGa0ZvZc-z_x1tjLRpc00sdDmw8DnlaYR4XVn39lBNB-Pui0NLoTlnuEKGbipuzilBpbpVPY4jA2T2PiiT_EEId8tSrm4Djlouyr1MGsNGKO1OP32zdSNxvHFF9rkYhzewfbx8dlVx-GWxrE");'>
        </div>
        <div class="absolute inset-0 bg-gradient-to-b from-black/40 via-black/20 to-background-light dark:to-background-dark"></div>
        <div class="relative z-10 flex h-full items-center justify-center px-6 text-center">
            <div class="max-w-4xl space-y-6 animate-fade-in-up">
                <h1 class="text-white text-5xl font-black leading-tight tracking-tight md:text-7xl drop-shadow-lg">
                    Soğukta Doğdu.<br /><span class="text-primary">Cesurlar İçin Tasarlandı.</span>
                </h1>
                <p class="text-slate-100 text-lg md:text-xl font-light max-w-2xl mx-auto drop-shadow-md">
                    Kış sporlarına olan tutku, performans için mühendislikle buluştu. Sınırları zorlamanızı sağlayacak ekipmanlar üretiyoruz.
                </p>
                <div class="pt-4">
                    <button class="bg-primary hover:bg-blue-600 text-white font-bold py-3 px-8 rounded-full transition-all transform hover:scale-105 shadow-lg shadow-blue-500/30 flex items-center gap-2 mx-auto">
                        <span>Hikayemizi Keşfedin</span>
                        <span class="material-symbols-outlined text-sm">arrow_downward</span>
                    </button>
                </div>
            </div>
        </div>
    </section>

    <section class="py-20 px-6 md:px-20 bg-background-light dark:bg-background-dark">
        <div class="max-w-3xl mx-auto text-center space-y-6">
            <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-primary/10 text-primary text-sm font-semibold mb-4">
                <span class="material-symbols-outlined text-base">flag</span>
                Misyonumuz
            </div>
            <h2 class="text-3xl md:text-4xl font-bold text-[#0d161c] dark:text-white leading-tight">
                @Model.Title
            </h2>
            <p class="text-slate-600 dark:text-slate-400 text-lg leading-relaxed">
                @Model.ShortDescription
            </p>
        </div>
    </section>

    <section class="py-16 px-6 md:px-20">
        <div class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
            <div class="relative rounded-2xl overflow-hidden h-[500px] shadow-2xl group">
                <div class="absolute inset-0 bg-cover bg-center transition-transform duration-700 group-hover:scale-110" data-alt="Karlı dağ manzarasına bakan kayakçı" style='background-image: url("https://lh3.googleusercontent.com/aida-public/AB6AXuCKRvy71-Tp9StjhzLcLMpCX4AEUGXx-FlV5nnTrxKHPbkW2WVNMSoFQ4SGub8QsHad_oRcDr3PMqW-Yk6LfN7O9npOpEeKEFvpiMC51GLdPqAE8w6FfJk3yTsbtxceBwQePqcSvhEaVl9vMvN-NxCKsFrkW9HRGDljp8tMpnqe4NECJgnFgEvrc_EmTLhmL-HC9fQ_AcVD7HZOvBOTzDDiqMf4STFk7OeR4siODaUEYgbWekgpBQxd8MhiSSWgpCaP6_pOtpZMZI0");'>
                </div>
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent flex items-end p-8">
                    <div class="text-white">
                        <p class="text-sm font-bold uppercase tracking-wider text-primary mb-2">1985'TEN BERİ</p>
                        <p class="text-xl font-medium">Aspen'deki küçük bir garajdan dünya yamaçlarına.</p>
                    </div>
                </div>
            </div>
            <div class="flex flex-col gap-6">
                <h2 class="text-3xl md:text-4xl font-bold text-[#0d161c] dark:text-white">@Model.StoryTitle</h2>
                <div class="space-y-4 text-slate-600 dark:text-slate-300">
                    <p>
                       @Model.StoryDescription
                    </p>
                </div>
                <div class="pt-4">
                    <a class="inline-flex items-center gap-2 text-primary font-bold hover:underline underline-offset-4" href="#">
                        İletişime Geçin
                        <span class="material-symbols-outlined text-sm">arrow_forward</span>
                    </a>
                </div>
            </div>
        </div>
    </section>

    <section class="py-20 px-6 md:px-20 bg-slate-50 dark:bg-[#15232d] border-y border-slate-200 dark:border-slate-800">
        <div class="max-w-7xl mx-auto">
            <div class="flex flex-col md:flex-row gap-10 md:gap-20 justify-between items-start mb-12">
                <div class="max-w-lg">
                    <h2 class="text-3xl md:text-4xl font-bold text-[#0d161c] dark:text-white mb-4">Temel Değerlerimiz</h2>
                    <p class="text-slate-600 dark:text-slate-400">Attığımız her dikişte ve doğaya sunduğumuz her üründe bize yol gösteren ilkeler.</p>
                </div>
                <div class="hidden md:block h-px flex-1 bg-slate-200 dark:bg-slate-700 mt-6"></div>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div class="bg-white dark:bg-[#1a2c38] p-8 rounded-xl border border-slate-100 dark:border-slate-700 shadow-sm hover:shadow-md transition-shadow group">
                    <div class="h-12 w-12 rounded-lg bg-primary/10 text-primary flex items-center justify-center mb-6 group-hover:bg-primary group-hover:text-white transition-colors">
                        <span class="material-symbols-outlined text-2xl">precision_manufacturing</span>
                    </div>
                    <h3 class="text-xl font-bold text-[#0d161c] dark:text-white mb-3">Hassasiyet</h3>
                    <p class="text-slate-500 dark:text-slate-400 leading-relaxed">
                        En kritik anlarda sizi yarı yolda bırakmayan mühendislik. İki ölçüyor, bir biçiyor ve bin kez test ediyoruz.
                    </p>
                </div>
                <div class="bg-white dark:bg-[#1a2c38] p-8 rounded-xl border border-slate-100 dark:border-slate-700 shadow-sm hover:shadow-md transition-shadow group">
                    <div class="h-12 w-12 rounded-lg bg-primary/10 text-primary flex items-center justify-center mb-6 group-hover:bg-primary group-hover:text-white transition-colors">
                        <span class="material-symbols-outlined text-2xl">landscape</span>
                    </div>
                    <h3 class="text-xl font-bold text-[#0d161c] dark:text-white mb-3">Saygı</h3>
                    <p class="text-slate-500 dark:text-slate-400 leading-relaxed">
                        Kaydığımız dağları koruyoruz. Doğayı muhafaza etmek için sürdürülebilir malzemeler ve etik üretim yöntemleri kullanıyoruz.
                    </p>
                </div>
                <div class="bg-white dark:bg-[#1a2c38] p-8 rounded-xl border border-slate-100 dark:border-slate-700 shadow-sm hover:shadow-md transition-shadow group">
                    <div class="h-12 w-12 rounded-lg bg-primary/10 text-primary flex items-center justify-center mb-6 group-hover:bg-primary group-hover:text-white transition-colors">
                        <span class="material-symbols-outlined text-2xl">groups</span>
                    </div>
                    <h3 class="text-xl font-bold text-[#0d161c] dark:text-white mb-3">Topluluk</h3>
                    <p class="text-slate-500 dark:text-slate-400 leading-relaxed">
                        Sporcuları ortak tutkuyla bir araya getiriyoruz. Dağlar herkesin sığabileceği kadar büyük.
                    </p>
                </div>
            </div>
        </div>
    </section>

    @await Component.InvokeAsync("_AboutTeamComponenPartial")
    @await Component.InvokeAsync("_AboutSubscribeComponenPartial")
</main>

<script id="tailwind-config">
    tailwind.config = {
        darkMode: "class",
        theme: {
            extend: {
                colors: {
                    "primary": "#0d93f2",
                    "background-light": "#f5f7f8",
                    "background-dark": "#101b22",
                },
                fontFamily: {
                    "display": ["Lexend", "sans-serif"],
                    "body": ["Noto Sans", "sans-serif"]
                },
                borderRadius: {"DEFAULT": "0.25rem", "lg": "0.5rem", "xl": "0.75rem", "full": "9999px"},
            },
        },
    }
</script>