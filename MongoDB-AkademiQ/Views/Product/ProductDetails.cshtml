@using MongoDB_AkademiQ.DTOs.ProductDTOs
@model ResultProductDTO
@{
    ViewData["Title"] = "Ürün Detayları";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<main class="flex-grow pt-6 pb-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <nav class="flex flex-wrap gap-2 text-sm mb-6 text-slate-500 dark:text-slate-400">
            <a class="hover:text-primary transition-colors" href="#">Ana Sayfa</a>
            <span>/</span>
            <a class="hover:text-primary transition-colors" href="#">Kayak</a>
            <span>/</span>
            <a class="hover:text-primary transition-colors" href="#">Kayaklar</a>
            <span>/</span>
            <span class="font-medium text-slate-900 dark:text-slate-100">@Model.Name</span>
        </nav>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-10 xl:gap-16">
            <div class="lg:col-span-7 space-y-4">
                <div class="relative group aspect-[4/3] w-full rounded-2xl overflow-hidden bg-white dark:bg-surface-dark shadow-sm border border-slate-100 dark:border-slate-800 flex items-center justify-center">
                    <div class="absolute top-4 left-4 z-10 flex flex-col gap-2">
                        <span class="bg-primary text-white text-xs font-bold px-3 py-1.5 rounded-full uppercase tracking-wider">Yeni Sezon</span>
                    </div>
                    <img alt="@Model.Name" class="object-cover w-full h-full mix-blend-multiply dark:mix-blend-normal hover:scale-105 transition-transform duration-500" src="@Model.ImageUrl" />
                    <button class="absolute bottom-4 right-4 bg-white/90 dark:bg-slate-800/90 p-2 rounded-lg shadow-sm opacity-0 group-hover:opacity-100 transition-opacity">
                        <span class="material-symbols-outlined text-slate-700 dark:text-slate-200">zoom_in</span>
                    </button>
                </div>
            </div>
            <div class="lg:col-span-5 flex flex-col h-full">
                <div class="sticky top-24 space-y-8">
                    <div class="space-y-4 border-b border-slate-200 dark:border-slate-800 pb-6">
                        <div class="flex items-start justify-between gap-4">
                            <h1 class="text-3xl md:text-4xl font-bold text-slate-900 dark:text-white leading-tight tracking-tight">@Model.Name</h1>
                            <button class="p-2 rounded-full hover:bg-slate-100 dark:hover:bg-slate-800 text-slate-400 hover:text-red-500 transition-colors">
                                <span class="material-symbols-outlined">favorite</span>
                            </button>
                        </div>
                        <p class="text-slate-600 dark:text-slate-300 leading-relaxed">
                            @Model.Description
                        </p>
                    </div>
                    <div class="space-y-6">
                        <div class="flex gap-4 pt-4">
                            <div class="flex items-center border border-slate-200 dark:border-slate-700 rounded-lg h-12 w-32 bg-white dark:bg-surface-dark">
                                <button class="flex-1 h-full hover:bg-slate-50 dark:hover:bg-slate-800 rounded-l-lg text-slate-600 dark:text-slate-300 transition-colors">-</button>
                                <span class="font-medium text-slate-900 dark:text-white">1</span>
                                <button class="flex-1 h-full hover:bg-slate-50 dark:hover:bg-slate-800 rounded-r-lg text-slate-600 dark:text-slate-300 transition-colors">+</button>
                            </div>
                            <button class="flex-1 h-12 bg-primary hover:bg-primary-dark text-white font-bold rounded-lg shadow-lg shadow-primary/30 transition-all flex items-center justify-center gap-2">
                                <span class="material-symbols-outlined">shopping_bag</span>
                                Sepete Ekle
                            </button>
                        </div>
                    </div>
                    <div class="grid grid-cols-2 gap-4 py-6 text-sm text-slate-600 dark:text-slate-400 border-t border-slate-200 dark:border-slate-800">
                        <div class="flex items-center gap-3">
                            <div class="p-2 rounded-full bg-blue-50 dark:bg-blue-900/20 text-primary">
                                <span class="material-symbols-outlined">local_shipping</span>
                            </div>
                            <span>100$ üzeri ücretsiz kargo</span>
                        </div>
                        <div class="flex items-center gap-3">
                            <div class="p-2 rounded-full bg-blue-50 dark:bg-blue-900/20 text-primary">
                                <span class="material-symbols-outlined">verified_user</span>
                            </div>
                            <span>2 Yıl Garanti</span>
                        </div>
                        <div class="flex items-center gap-3">
                            <div class="p-2 rounded-full bg-blue-50 dark:bg-blue-900/20 text-primary">
                                <span class="material-symbols-outlined">sync_alt</span>
                            </div>
                            <span>30 Günlük İade</span>
                        </div>
                        <div class="flex items-center gap-3">
                            <div class="p-2 rounded-full bg-blue-50 dark:bg-blue-900/20 text-primary">
                                <span class="material-symbols-outlined">ac_unit</span>
                            </div>
                            <span>Tüm Dağ Uyumlu</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @await Component.InvokeAsync("_ProductFourListComponentPartial")
    </div>
</main>