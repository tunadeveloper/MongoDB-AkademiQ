    tailwind.config = {
        darkMode: "class",
        theme: {
            extend: {
                colors: {
                    "primary": "#0d93f2",
                    "background-light": "#f5f7f8",
                    "background-dark": "#101b22",
                },
                fontFamily: {
                    "display": ["Lexend", "sans-serif"],
                    "body": ["Noto Sans", "sans-serif"],
                },
                borderRadius: {
                    "DEFAULT": "0.25rem",
                    "lg": "0.5rem",
                    "xl": "0.75rem",
                    "full": "9999px"
                },
            },
        },
    }
</script>