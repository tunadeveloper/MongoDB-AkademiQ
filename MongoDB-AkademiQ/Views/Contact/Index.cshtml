@using MongoDB_AkademiQ.Entities
@{
    ViewData["Title"] = "İletişim";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="relative flex w-full flex-col">
    <div class="layout-container flex h-full grow flex-col">
        <div class="px-4 md:px-10 lg:px-40 flex flex-1 justify-center py-5">
            <div class="layout-content-container flex flex-col w-full max-w-[1200px] flex-1">
                <div class="@@container">
                    <div class="@@[480px]:p-0">
                        <div class="flex min-h-[400px] flex-col gap-6 bg-cover bg-center bg-no-repeat rounded-2xl items-center justify-center p-8 relative overflow-hidden" data-alt="Karlı dağlar ve uzaktaki bir kayakçı" style='background-image: linear-gradient(rgba(13, 147, 242, 0.2) 0%, rgba(16, 27, 34, 0.6) 100%), url("https://lh3.googleusercontent.com/aida-public/AB6AXuB-NaiwWyM_jXgiv5KxTm7Vu8sQ_WVqKXh1E6qv6c2frzrqR-RhGH0Uw4ZWlueDl-O0E4hHy6Ps_awx0shK4sX6o0v7-2STiQ0gCLQO63TC_wQvs29e-fxR2iDZc8phWmWuQ2o4xpfegCPp-NgPokWRLafCxBiK-YNmSZq18BoFMBTBiZetGZwpC377bjXFXTm1IMF3vi3oBgarMvmORJ6r9AU8QeqJUK4xXrFOgKnkvHauHqC_OTVM0U8BloxlUleRXCafb6pbaLg");'>
                            <div class="absolute inset-0 bg-gradient-to-b from-transparent to-black/30 pointer-events-none"></div>
                            <div class="flex flex-col gap-3 text-center z-10 max-w-2xl">
                                <h1 class="text-white text-5xl md:text-6xl font-black leading-tight tracking-[-0.033em] drop-shadow-sm">
                                    Bize Ulaşın
                                </h1>
                                <h2 class="text-slate-100 text-lg md:text-xl font-medium leading-relaxed drop-shadow-md">
                                    Ekipmanlarınız veya yaklaşan seyahatiniz hakkında bir sorunuz mu var? Pistlere güvenle çıkmanız için size yardımcı olmak için buradayız.
                                </h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="flex-1 flex justify-center w-full px-4 md:px-10 lg:px-40 py-12">
    <div class="w-full max-w-[1200px] grid grid-cols-1 lg:grid-cols-12 gap-12">
        @await Component.InvokeAsync("_ContactSendMessageComponentPartial")
        @await Component.InvokeAsync("_ContactInfoComponentPartial", new ContactInfo())
    </div>
</div>

<div class="bg-white dark:bg-slate-800/30 border-t border-slate-200 dark:border-slate-800 py-16">
    <div class="px-4 md:px-10 lg:px-40 flex justify-center">
        <div class="w-full max-w-[900px] flex flex-col gap-10">
            <div class="text-center">
                <h2 class="text-slate-900 dark:text-white text-3xl font-bold tracking-tight mb-3">Sıkça Sorulan Sorular</h2>
                <p class="text-slate-500 dark:text-slate-400">Aradığınız cevabın burada olup olmadığını kontrol ederek zaman kazanabilirsiniz.</p>
            </div>
            <div class="grid gap-4">
                <details class="group bg-slate-50 dark:bg-slate-800 border border-slate-200 dark:border-slate-700 rounded-lg p-4 cursor-pointer">
                    <summary class="flex items-center justify-between font-bold text-slate-900 dark:text-white list-none">
                        <span>Siparişimi nasıl takip edebilirim?</span>
                        <span class="transition group-open:rotate-180">
                            <span class="material-symbols-outlined">expand_more</span>
                        </span>
                    </summary>
                    <p class="text-slate-600 dark:text-slate-400 mt-3 text-sm leading-relaxed">
                        Siparişiniz kargoya verildiğinde, takip bağlantısı içeren bir e-posta alacaksınız. Ayrıca hesap panelinize giriş yaparak sipariş durumunuzu görüntüleyebilirsiniz.
                    </p>
                </details>
                <details class="group bg-slate-50 dark:bg-slate-800 border border-slate-200 dark:border-slate-700 rounded-lg p-4 cursor-pointer">
                    <summary class="flex items-center justify-between font-bold text-slate-900 dark:text-white list-none">
                        <span>Kayak ekipmanları için iade politikanız nedir?</span>
                        <span class="transition group-open:rotate-180">
                            <span class="material-symbols-outlined">expand_more</span>
                        </span>
                    </summary>
                    <p class="text-slate-600 dark:text-slate-400 mt-3 text-sm leading-relaxed">
                        Kullanılmamış ekipmanların iadesini satın alma tarihinden itibaren 30 gün içinde kabul ediyoruz. Ürünler orijinal ambalajında olmalıdır. Kişiye özel montajı yapılmış kayaklar iade kapsamı dışındadır.
                    </p>
                </details>
                <details class="group bg-slate-50 dark:bg-slate-800 border border-slate-200 dark:border-slate-700 rounded-lg p-4 cursor-pointer">
                    <summary class="flex items-center justify-between font-bold text-slate-900 dark:text-white list-none">
                        <span>Uluslararası gönderim yapıyor musunuz?</span>
                        <span class="transition group-open:rotate-180">
                            <span class="material-symbols-outlined">expand_more</span>
                        </span>
                    </summary>
                    <p class="text-slate-600 dark:text-slate-400 mt-3 text-sm leading-relaxed">
                        Evet, kış sporları destinasyonu olan çoğu ülkeye gönderim yapıyoruz. Kargo ücretleri ve teslimat süreleri konuma göre değişir ve ödeme sayfasında hesaplanır.
                    </p>
                </details>
            </div>
            <div class="text-center pt-4">
                <a class="inline-flex items-center gap-2 text-primary font-bold hover:underline" href="#">
                    Tüm S.S.S.'leri Görüntüle
                    <span class="material-symbols-outlined text-[18px]">arrow_forward</span>
                </a>
            </div>
        </div>
    </div>
</div>

@if (TempData["MessageSuccess"] != null)
{
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            @if (TempData["MessageSuccess"] != null)
            {
                        <text>
                        Swal.fire({
                            icon: 'success',
                            title: 'Başarılı!',
                            text: '@Html.Raw(TempData["MessageSuccess"])',
                            confirmButtonColor: '#0d93f2',
                            timer: 3000,
                            timerProgressBar: true
                        });
                        </text>
            }
        });
    </script>
}



<style>
    .material-symbols-outlined {
        font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
    }
</style>
