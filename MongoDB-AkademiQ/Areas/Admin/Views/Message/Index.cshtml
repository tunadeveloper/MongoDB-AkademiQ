@using MongoDB_AkademiQ.DTOs.MessageDTOs
@model List<ResultMessageDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/_adminLayout.cshtml";
}
<div x-data="{ open:false, editMode:false, productId:'', productName:'', productImage:'', productDesc:'', productPrice:'', productIsPopular:false, productCategoryId:'' }"
     class="flex-1 overflow-y-auto p-8 pb-20">

    <div class="max-w-7xl mx-auto space-y-8">

        <div class="glass-panel rounded-2xl p-6 shadow-sm flex-[2] border border-white dark:border-slate-800">
            <div class="flex items-center justify-between mb-6">
                <h3 class="text-lg font-bold text-slate-900 dark:text-white">Mesaj Kutusu</h3>
            </div>

            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead>
                        <tr class="text-left text-xs font-semibold text-slate-500 dark:text-slate-400 uppercase tracking-wider border-b border-slate-200 dark:border-slate-700">
                            <th class="pb-3">İsim Soyisim</th>
                            <th class="pb-3">E-Posta Adresi</th>
                            <th class="pb-3">Konu</th>
                            <th class="pb-3">Durum</th>
                            <th class="pb-3">Sil</th>
                            <th class="pb-3">Mesajı Aç</th>
                        </tr>
                    </thead>

                    <tbody class="text-sm divide-y divide-slate-100 dark:divide-slate-700/50">
                        @foreach (var item in Model)
                        {
                            <tr class="group hover:bg-slate-50 dark:hover:bg-slate-800/50 transition-colors">
                               
                                <td class="py-4 text-slate-600 dark:text-slate-400">@item.Name @item.Surname</td>
                                <td class="py-4 text-slate-600 dark:text-slate-400">@item.Email</td>
                                <td class="py-4 text-slate-600 dark:text-slate-400">@item.Subject</td>
                               <td class="py-4 text-slate-600 dark:text-slate-400">
                                    @if (item.IsRead)
                                    {
                                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-semibold bg-black-100 text-black-800 dark:bg-black-900/30 dark:text-black-400">Okundu</span>
                                    }
                                    else
                                    {
                                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-semibold bg-yellow-100 text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-400">Okunmadı</span>
                                    }
                                </td>

                                <td class="py-4">
                                    <a href="/Admin/Product/DeleteProduct/@item.Id"
                                       class="inline-flex items-center px-4 py-2 rounded-full text-sm font-semibold bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-400">
                                        Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
    @await Component.InvokeAsync("_CreateProductComponentPartial")
</div>
