@using MongoDB_AkademiQ.DTOs.NewsletterDTOs
@model List<ResultNewsletterDTO>
@{
    ViewData["Title"] = "Abonelikler";
    Layout = "~/Areas/Admin/Views/_adminLayout.cshtml";
}

<div class="flex-1 overflow-y-auto p-8 pb-20">
    <div class="max-w-7xl mx-auto space-y-8">
        <div class="glass-panel rounded-2xl p-6 shadow-sm border border-white dark:border-slate-800">
            <div class="flex items-center justify-between mb-6">
                <h3 class="text-lg font-bold text-slate-900 dark:text-white">Newsletter Aboneleri</h3>
                <span class="text-sm text-slate-500 dark:text-slate-400">Toplam @Model.Count abone</span>
            </div>

            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead>
                        <tr class="text-left text-xs font-semibold text-slate-500 dark:text-slate-400 uppercase tracking-wider border-b border-slate-200 dark:border-slate-700">
                            <th class="pb-3">E-Posta Adresi</th>
                            <th class="pb-3 text-center">İşlemler</th>
                        </tr>
                    </thead>

                    <tbody class="text-sm divide-y divide-slate-100 dark:divide-slate-700/50">
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr class="group hover:bg-slate-50 dark:hover:bg-slate-800/50 transition-colors">
                                    <td class="py-4 text-slate-600 dark:text-slate-400 font-medium">@item.Email</td>
                                    <td class="py-4">
                                        <div class="flex items-center justify-center gap-2">
                                            <button type="button" onclick="deleteNewsletter(this)" 
                                                    data-id="@item.Id"
                                                    class="inline-flex items-center px-3 py-1.5 rounded-lg text-xs font-semibold bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-400 hover:bg-red-200 dark:hover:bg-red-900/50 transition-colors">
                                                <span class="material-symbols-outlined text-sm mr-1">delete</span>
                                                Sil
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="2" class="py-8 text-center text-slate-500 dark:text-slate-400">
                                    Henüz abone bulunmamaktadır.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    function deleteNewsletter(button) {
        const id = button.getAttribute('data-id');
        
        if (!id) {
            alert('Abone ID bulunamadı!');
            return;
        }
        
        Swal.fire({
            title: 'Emin misiniz?',
            text: 'Bu aboneyi silmek istediğinize emin misiniz?',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#dc2626',
            cancelButtonColor: '#6b7280',
            confirmButtonText: 'Evet, Sil',
            cancelButtonText: 'İptal'
        }).then((result) => {
            if (result.isConfirmed) {
                fetch('/Admin/Newsletter/DeleteNewsletter', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ id: id })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Başarılı!',
                            text: data.message,
                            confirmButtonColor: '#0d93f2',
                            timer: 2000,
                            timerProgressBar: true
                        }).then(() => {
                            location.reload();
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Hata!',
                            text: data.message,
                            confirmButtonColor: '#dc2626'
                        });
                    }
                })
                .catch(error => {
                    Swal.fire({
                        icon: 'error',
                        title: 'Hata!',
                        text: 'Silme işlemi sırasında bir hata oluştu.',
                        confirmButtonColor: '#dc2626'
                    });
                });
            }
        });
    }
</script>
