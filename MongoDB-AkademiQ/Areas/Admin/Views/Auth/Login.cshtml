@{
    ViewData["Title"] = "Admin Giriş";
    Layout = null;
}

<!DOCTYPE html>
<html class="light" lang="tr">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>@ViewData["Title"] - AkademiQ</title>
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Lexend:wght@300;400;500;700&display=swap" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#2b9dee",
                        "primary-dark": "#1a8cd8",
                        "background-light": "#f6f7f8",
                        "background-dark": "#101a22",
                        "surface-light": "#ffffff",
                        "surface-dark": "#1e2936",
                        "text-main-light": "#0d161b",
                        "text-main-dark": "#e2e8f0",
                        "text-secondary-light": "#4c799a",
                        "text-secondary-dark": "#94a3b8",
                        "border-light": "#cfdde7",
                        "border-dark": "#334155",
                    },
                    fontFamily: {
                        "display": ["Lexend", "sans-serif"]
                    },
                    borderRadius: {
                        "DEFAULT": "0.25rem",
                        "lg": "0.5rem",
                        "xl": "0.75rem",
                        "2xl": "1rem",
                        "full": "9999px"
                    },
                },
            },
        }
    </script>
    <style>
        .glass-panel {
            background: rgba(255, 255, 255, 0.85);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
        }
        .dark .glass-panel {
            background: rgba(30, 41, 54, 0.85);
        }
    </style>
</head>
<body class="font-display antialiased" style="margin: 0; padding: 0; min-height: 100vh;">
    <div class="relative flex min-h-screen w-full flex-col overflow-hidden" style="background: linear-gradient(135deg, rgba(102, 126, 234, 0.8) 0%, rgba(118, 75, 162, 0.8) 100%), url('https://images.unsplash.com/photo-1551918120-9739cb430c6d?w=1920') center/cover fixed no-repeat;">
        <div class="relative z-10 flex flex-1 flex-col items-center justify-center p-4 sm:p-6 lg:p-8">
            <div class="mb-8 flex flex-col items-center gap-3 animate-fade-in-down">
                <div class="flex h-16 w-16 items-center justify-center rounded-2xl bg-primary text-white shadow-lg shadow-blue-500/30">
                    <span class="material-symbols-outlined !text-4xl">school</span>
                </div>
                <h1 class="text-3xl font-bold tracking-tight text-white drop-shadow-md">AkademiQ Admin</h1>
            </div>
            <div class="glass-panel w-full max-w-[440px] rounded-2xl border border-white/50 shadow-2xl dark:border-white/10 dark:shadow-black/50 overflow-hidden">
                <div class="px-8 pt-10 pb-2 text-center">
                    <h2 class="text-2xl font-bold text-text-main-light dark:text-text-main-dark">Hoş Geldiniz</h2>
                    <p class="mt-2 text-sm text-text-secondary-light dark:text-text-secondary-dark">Giriş yapmak için bilgilerinizi girin</p>
                </div>

                <div class="p-8">
                    <form action="/Admin/Auth/Login" method="post" class="flex flex-col gap-5">
                        <div class="flex flex-col gap-1.5">
                            <label class="text-sm font-medium text-text-main-light dark:text-text-main-dark flex items-center gap-2" for="username">
                                <span class="material-symbols-outlined !text-[18px] text-text-secondary-light dark:text-text-secondary-dark">person</span>
                                Kullanıcı Adı
                            </label>
                            <input class="form-input block w-full rounded-xl border border-border-light bg-surface-light/50 px-4 py-3 text-text-main-light placeholder:text-text-secondary-light/70 focus:border-primary focus:ring-2 focus:ring-primary/20 dark:border-border-dark dark:bg-background-dark/50 dark:text-white dark:focus:border-primary dark:placeholder:text-text-secondary-dark/50 transition-all duration-200" 
                                   id="username" 
                                   name="username" 
                                   placeholder="kullaniciadi" 
                                   type="text" 
                                   required />
                        </div>
                        <div class="flex flex-col gap-1.5">
                            <label class="text-sm font-medium text-text-main-light dark:text-text-main-dark flex items-center gap-2" for="password">
                                <span class="material-symbols-outlined !text-[18px] text-text-secondary-light dark:text-text-secondary-dark">lock</span>
                                Şifre
                            </label>
                            <div class="relative">
                                <input class="form-input block w-full rounded-xl border border-border-light bg-surface-light/50 px-4 py-3 pr-10 text-text-main-light placeholder:text-text-secondary-light/70 focus:border-primary focus:ring-2 focus:ring-primary/20 dark:border-border-dark dark:bg-background-dark/50 dark:text-white dark:focus:border-primary dark:placeholder:text-text-secondary-dark/50 transition-all duration-200" 
                                       id="password" 
                                       name="password" 
                                       placeholder="••••••••" 
                                       type="password" 
                                       required />
                                <button class="absolute right-3 top-1/2 -translate-y-1/2 text-text-secondary-light hover:text-primary dark:text-text-secondary-dark" type="button" onclick="togglePassword()">
                                    <span class="material-symbols-outlined !text-[20px]" id="toggleIcon">visibility_off</span>
                                </button>
                            </div>
                        </div>
                        <button type="submit" class="mt-2 flex w-full items-center justify-center gap-2 rounded-xl bg-primary py-3.5 text-base font-bold text-white shadow-lg shadow-blue-500/25 transition-all duration-200 hover:bg-primary-dark hover:shadow-blue-500/40 active:scale-[0.98]">
                            <span>Giriş Yap</span>
                            <span class="material-symbols-outlined !text-[20px]">arrow_forward</span>
                        </button>
                    </form>
                </div>
                <div class="border-t border-border-light/50 bg-gray-50/50 p-4 text-center dark:border-border-dark/50 dark:bg-white/5">
                    <p class="text-sm text-text-secondary-light dark:text-text-secondary-dark">
                        Hesabınız yok mu? <a class="font-medium text-primary hover:underline" href="/Admin/Auth/Register">Kayıt Ol</a>
                    </p>
                </div>
            </div>

            <div class="mt-8 flex gap-6 text-sm font-medium text-white/80 drop-shadow-sm">
                <a class="hover:text-white transition-colors" href="/">Ana Sayfaya Dön</a>
            </div>
        </div>
    </div>

    <script>
        function togglePassword() {
            const passwordInput = document.getElementById('password');
            const toggleIcon = document.getElementById('toggleIcon');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.textContent = 'visibility';
            } else {
                passwordInput.type = 'password';
                toggleIcon.textContent = 'visibility_off';
            }
        }
    </script>
</body>
</html>
