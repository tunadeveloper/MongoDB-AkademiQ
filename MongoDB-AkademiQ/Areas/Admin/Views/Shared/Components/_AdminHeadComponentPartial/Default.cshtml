        body {
            font-family: 'Lexend', sans-serif;
        }
        /* Frosted glass effect utility */
        .glass-panel {
            background: rgba(255, 255, 255, 0.7);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            border: 1px solid rgba(255, 255, 255, 0.6);
        }

        .dark .glass-panel {
