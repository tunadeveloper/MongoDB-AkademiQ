<div x-show="open"
     class="fixed inset-0 bg-black/50 flex items-center justify-center p-4 z-50"
     x-transition.opacity.duration.300ms>

    <div class="bg-white dark:bg-slate-900 rounded-xl p-6 w-full max-w-md shadow-xl"
         @@click.outside="open=false"
         x-transition:enter="transition ease-out duration-300"
         x-transition:enter-start="opacity-0 scale-90"
         x-transition:enter-end="opacity-100 scale-100"
         x-transition:leave="transition ease-in duration-200"
         x-transition:leave-start="opacity-100 scale-100"
         x-transition:leave-end="opacity-0 scale-90">

        <h2 class="text-lg font-bold mb-4" x-text="editMode ? 'Kategori Düzenle' : 'Kategori Ekle'"></h2>

        <form method="post" 
              x-bind:action="editMode ? '/Admin/Category/UpdateCategory' : '/Admin/Category/CreateCategory'">

            <input type="hidden" name="Id" x-bind:value="categoryId" x-show="editMode">

            <div class="mb-4">
                <label class="block text-sm font-medium mb-1">Kategori Adı</label>
                <input type="text" name="Name" x-model="categoryName"
                       class="w-full px-3 py-2 rounded-lg border dark:border-slate-700 dark:bg-slate-800 dark:text-white"
                       required>
            </div>

            <div class="flex justify-end gap-3 mt-6">
                <button type="button" @@click="open=false"
                        class="px-4 py-2 rounded-lg bg-gray-200 dark:bg-slate-700 dark:text-white">
                    İptal
                </button>

                <button type="submit"
                        class="px-4 py-2 rounded-lg bg-blue-600 text-white hover:bg-blue-700">
                    Kaydet
                </button>
            </div>
        </form>

    </div>
</div>