@using MongoDB_AkademiQ.DTOs.CategoryDTOs
@model List<ResultCategoryDTO>
<div x-show="open"
     class="fixed inset-0 bg-black/50 flex items-center justify-center p-4 z-50"
     x-transition.opacity.duration.300ms>

    <div class="bg-white dark:bg-slate-900 rounded-xl p-6 w-full max-w-md shadow-xl max-h-[90vh] overflow-y-auto"
         @@click.outside="open=false"
         x-transition:enter="transition ease-out duration-300"
         x-transition:enter-start="opacity-0 scale-90"
         x-transition:enter-end="opacity-100 scale-100"
         x-transition:leave="transition ease-in duration-200"
         x-transition:leave-start="opacity-100 scale-100"
         x-transition:leave-end="opacity-0 scale-90">

        <h2 class="text-lg font-bold mb-4" x-text="editMode ? 'Ürün Düzenle' : 'Ürün Ekle'"></h2>

        <form method="post"
              x-bind:action="editMode ? '/Admin/Product/UpdateProduct' : '/Admin/Product/CreateProduct'">

            <input type="hidden" name="Id" x-bind:value="productId" x-show="editMode">

            <div class="mb-4">
                <label class="block text-sm font-medium mb-1 dark:text-slate-300">Ürün Adı</label>
                <input type="text" name="Name" x-model="productName"
                       class="w-full px-3 py-2 rounded-lg border border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-800 text-slate-900 dark:text-white focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition"
                       required>
            </div>

            <div class="mb-4">
                <label class="block text-sm font-medium mb-1 dark:text-slate-300">Görsel URL</label>
                <input type="text" name="ImageUrl" x-model="productImage"
                       placeholder="https://..."
                       class="w-full px-3 py-2 rounded-lg border border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-800 text-slate-900 dark:text-white focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition">
            </div>

            <div class="mb-4">
                <label class="block text-sm font-medium mb-1 dark:text-slate-300">Açıklama</label>
                <textarea name="Description" x-model="productDesc" rows="3"
                          class="w-full px-3 py-2 rounded-lg border border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-800 text-slate-900 dark:text-white focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition resize-none"></textarea>
            </div>

            <div class="mb-4">
                <label class="block text-sm font-medium mb-1 dark:text-slate-300">Fiyat</label>
                <input type="number" step="0.01" name="Price" x-model="productPrice"
                       class="w-full px-3 py-2 rounded-lg border border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-800 text-slate-900 dark:text-white focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition"
                       required>
            </div>

            <div class="mb-4">
                <label class="block text-sm font-medium mb-1 dark:text-slate-300">Kategori</label>
                <select name="CategoryId" x-model="productCategoryId"
                        class="w-full px-3 py-2 rounded-lg border border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-800 text-slate-900 dark:text-white focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition"
                        required>
                    <option value="">Kategori Seçin</option>
                    @foreach (var category in Model)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
            </div>

            <div class="mb-4">
                <input type="hidden" name="IsPopular" x-bind:value="productIsPopular ? 'true' : 'false'">
                <label class="flex items-center gap-2 cursor-pointer">
                    <input type="checkbox" x-model="productIsPopular"
                           class="w-4 h-4 rounded border-slate-300 text-primary focus:ring-primary">
                    <span class="text-sm font-medium dark:text-slate-300">Popüler Ürün</span>
                </label>
            </div>

            <div class="flex justify-end gap-3 mt-6">
                <button type="button" @@click="open=false"
                        class="px-4 py-2 rounded-lg bg-gray-200 text-gray-700 dark:bg-slate-700 dark:text-slate-300 hover:bg-gray-300 dark:hover:bg-slate-600 transition">
                    İptal
                </button>

                <button type="submit"
                        class="px-4 py-2 rounded-lg bg-primary text-white hover:bg-blue-700 transition shadow-md">
                    Kaydet
                </button>
            </div>
        </form>

    </div>
</div>
